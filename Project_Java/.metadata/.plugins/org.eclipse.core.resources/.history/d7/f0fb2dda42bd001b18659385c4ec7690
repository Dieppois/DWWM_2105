import java.util.*;
public class E_2_5_2_ {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner (System.in);
		int nbMachine;
		int nbUtilisateur;
		int Diff;
		int scoreUtilisateur;
		int scoreBot;
		boolean continuer=true.
		String rep;
		
		
		Random aleas=new Random(3);
		
		scoreBot=0;
		scoreUtilisateur=0;
		
		do {
			System.out.println("Veuillez entre un nombre entre 0 et 2, ou un nombre négatif pour arrêter la partie");
			nbUtilisateur=sc.nextInt();
			sc.nextLine();
			nbMachine=aleas.nextInt();
			
			Diff=Math.abs(nbUtilisateur-nbMachine);
					
			switch (Diff) {
			case 2:
				if (nbUtilisateur > nbMachine) {
					scoreUtilisateur++;
				System.out.println("score"+scoreUtilisateur +scoreBot);
				}else {
					scoreBot++;
					System.out.println("score"+scoreUtilisateur +scoreBot);
				}
				break;
			case 1: if (nbUtilisateur < nbMachine ) {
				scoreBot++;
				System.out.println("score"+scoreUtilisateur +scoreBot);
			}
				else { 
					scoreUtilisateur++;
					System.out.println("score"+scoreUtilisateur +scoreBot);
			}
				
				break;
			case 0:
				if (nbUtilisateur == nbMachine ) {
			System.out.println("score"+scoreUtilisateur +scoreBot);
				}
				break;
			default:
				
				System.out.println("wtf");
				break;
			}
			
			
			
			
		} while (scoreBot<10 && scoreUtilisateur<10 && nbUtilisateur>=0);
		
		if (nbUtilisateur<0) {
			System.out.println("Fin"+scoreUtilisateur+scoreBot);
		}
			
		
	else if(scoreUtilisateur >=10)
	{
		System.out.println("u win");
}
	else {
		System.out.println("u lose");
	}
}
}