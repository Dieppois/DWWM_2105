			{
				lettre_courante=phraseTab[cptlettres];
				System.out.println("La lettre courante est : "+ lettre_courante) ;
			
				MotTab= phraseTab[cptlettres].split("");
				System.out.println("Lettre: "+MotTab[cptlettres]) ;
			}
			
			
		}
		
	sc.close();
				
