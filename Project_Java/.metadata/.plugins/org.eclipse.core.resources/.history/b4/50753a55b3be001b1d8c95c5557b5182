	String phrase;
	String [] phraseTab;
	int longueur;
	int cpt;
	int cptmots;
	int cptlettres;
	int longueurTab;
	int nbmots;
	int nblettres;
	String lettre;
	String lettre_courante;
	String PhraseTab;
	String[] MotTab;
                                                 //Renseignement de la phrase
	
		System.out.println("Renseigner la phrase à analyser");
		Scanner sc = new Scanner(System.in);
		
		phrase = sc.nextLine();
		
		System.out.println("La phrase à traiter est : "+phrase );
		System.out.println("La longueur de la phrase espaces inclus est de  : "+phrase.length() );
		
		longueur = phrase.length();
		phraseTab = phrase.split(" ");
		
		nbmots=phraseTab.length;
		
		System.out.println("La phrase à traiter contient : "+nbmots+" mots") ;
		//System.out.println("La phrase à traiter est : "+ phraseTab[2].length()) ;
		
			
		for (cptmots=0;cptmots<nbmots-1; cptmots++);
		{

			nblettres=phraseTab[cptmots].length();
			
			System.out.println("Le mot "+nbmots+" contient "+nblettres+" lettres") ;
			
